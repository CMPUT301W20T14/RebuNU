<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/single_order_textview_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Complete"
        app:layout_constraintStart_toEndOf="@+id/single_order_textview_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/single_order_textview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="66 QRs"
        app:layout_constraintStart_toEndOf="@+id/single_order_textview_status"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/single_order_textview_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="xxxxxxxxxxxxxxxxxxxxx"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>